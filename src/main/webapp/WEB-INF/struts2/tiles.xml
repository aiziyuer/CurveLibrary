<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/framework/base.jsp">
        <put-attribute name="header" value="/framework/_header.jsp"/>
        <put-attribute name="nav" value="/framework/_nav.jsp"/>
        <put-attribute name="body" value="/framework/_body.jsp"/>
        <put-attribute name="footer" value="/framework/_footer.jsp"/>
    </definition>

    <definition name="home.page" extends="baseLayout">
    </definition>

    <definition name="login.page" extends="baseLayout">
        <put-attribute name="body"  value="/usr/login.jsp"/>
    </definition>


</tiles-definitions>
